{
	"entryFile": "server.ts",
	"noImplicitAdditionalProperties": "throw-on-extras",
	"controllerPathGlobs": [
		"src/controllers/**/*Controller.ts"
	],
	"spec": {
		"outputDirectory": "dist",
		"specVersion": 3,
		"securityDefinitions": {
			"jwt": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
		}
	},
	"routes": {
		"routesDir": "dist",
		"middleware": "express",
		"authenticationModule": "./src/middleware/auth.ts"
	}
}